<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasketballCounter">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game_label"
            android:padding="24dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="@string/game_lab" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_container"
            android:gravity="center"
            android:divider="#000000"
            android:showDividers="middle"
            android:orientation="horizontal" >
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/fragment_container_a"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/fragment_container_b"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:id="@+id/reset"
                android:text="@string/reset" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:id="@+id/save_game"
                android:text="@string/save_game" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:id="@+id/next_activity"
                android:text="@string/next_act" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>